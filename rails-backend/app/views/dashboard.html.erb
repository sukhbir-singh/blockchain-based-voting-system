  <script>

  function draw(leaders){
    var ctx = document.getElementById("myChart").getContext('2d');
    var graph_data = leaders.graph_data;

    data = {
            labels: graph_data.leaders,

            datasets: [{
                label: '# of Votes',
                data: graph_data.leader_counts,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 206, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
